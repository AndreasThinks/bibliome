# Bluesky/AT-Proto Configuration
BLUESKY_HANDLE=your-handle.bsky.social
BLUESKY_PASSWORD=your-app-password

# Google Books API (optional)
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Application Settings
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO
DEBUG=true
HOST=localhost
PORT=5001
# BASE_URL is optional and only needed if you are running behind a reverse proxy
# that doesn't set the Host header correctly.
# BASE_URL=http://localhost:5001/

# Email Configuration (for contact form via SMTP2GO)
CONTACT_EMAIL=your-email@yourdomain.com
SENDER_EMAIL=your-verified-sender@yourdomain.com
SMTP2GO_API_KEY=api-your-smtp2go-api-key-here

# Bluesky Automation
BLUESKY_AUTOMATION_ENABLED=true
BLUESKY_AUTOMATION_HANDLE=bibliome.club
BLUESKY_AUTOMATION_PASSWORD=your-automation-app-password
BLUESKY_POST_THRESHOLD=3
BLUESKY_MAX_POSTS_PER_HOUR=3

# Admin Configuration
ADMIN_USERNAMES=your-admin-handle.bsky.social,another-admin.bsky.social

# Bibliome Network Scanner
BIBLIOME_SCANNER_ENABLED=false
BIBLIOME_SCAN_INTERVAL_HOURS=6
BIBLIOME_RATE_LIMIT_PER_MINUTE=30
BIBLIOME_IMPORT_PUBLIC_ONLY=true
BIBLIOME_MAX_USERS_PER_SCAN=100
