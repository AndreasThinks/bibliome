{
  "lexicon": 1,
  "id": "com.bibliome.comment",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["content", "bookRef", "createdAt"],
        "properties": {
          "content": {"type": "string", "maxLength": 1000},
          "bookRef": {"type": "string", "format": "at-uri"},
          "bookshelfRef": {"type": "string", "format": "at-uri"},
          "parentCommentRef": {"type": "string", "format": "at-uri"},
          "createdAt": {"type": "string", "format": "datetime"},
          "editedAt": {"type": "string", "format": "datetime"}
        }
      }
    }
  }
}
